<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cybertiger.tadhg.mycalculator.MainActivity">

    <TextView
        android:id="@+id/showOperation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/grey"
        android:ems="10"
        android:gravity="right"
        android:paddingRight="5pt"
        android:paddingTop="40pt"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="@android:color/white"
        android:textSize="80sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="btnCleanEvent"
                android:text="AC"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnSign"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="btnNumberEvent"
                android:text="+/-"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnPercent"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="btnPercentEvent"
                android:text="%"
                android:textSize="24sp" />

            <Button

                android:id="@+id/btnDivide"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/operation"
                android:onClick="btnOperationEvent"
                android:text="/"
                android:textColor="@android:color/white"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="btnNumberEvent"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="btnNumberEvent"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="btnNumberEvent"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnMulti"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/operation"
                android:onClick="btnOperationEvent"
                android:text="*"
                android:textColor="@android:color/white"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="btnNumberEvent"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="btnNumberEvent"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="btnNumberEvent"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnSub"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/operation"
                android:onClick="btnOperationEvent"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="btnNumberEvent"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="btnNumberEvent"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="btnNumberEvent"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:background="@color/operation"
                android:onClick="btnOperationEvent"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="24sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn0"
            android:layout_width="60pt"
            android:layout_height="40pt"
            android:layout_marginRight="1pt"
            android:layout_weight="2"
            android:background="@color/whiteBack"
            android:onClick="btnNumberEvent"
            android:text="0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnDecimal"
            android:layout_width="30pt"
            android:layout_height="40pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/whiteBack"
            android:text="."
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="30pt"
            android:layout_height="40pt"
            android:layout_weight="1"
            android:background="@color/operation"
            android:onClick="btnEqualEvent"
            android:text="="
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>
